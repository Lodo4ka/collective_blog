<%= simple_form_for(resource, as: resource_name, data: { turbo: false }, url: registration_path(resource_name)) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-inputs mb-3">
    <div class="col-6 ">
      <%= form.input :email, autofocus: true, type: 'email', autocomplete: true, required: true, input_html: { autocomplete: 'email' } %>
    </div>
    <div class="col-6">
      <%= form.input :password, required: true,
                     hint: (@minimum_password_length if @minimum_password_length),
                     input_html: { autocomplete: 'new-password' } %>
    </div>
    <div class="col-6">
      <%= form.input :password_confirmation,
                     required: true,
                     input_html: { autocomplete: 'new-password' } %>
    </div>
  </div>
  <div class="form-actions">
    <%= form.button :submit, 'Sign up', class: 'btn-primary' %>
  </div>
<% end %>
