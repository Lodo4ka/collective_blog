<div class="card mb-2">
  <div class="card-header small d-flex">
    <%= post_comment.user.email %>
  </div>
  <div class="card-body">
    <div class="card-text">
      <%= post_comment.content %>
    </div>
    <div class="card-footer text-muted border-bottom">
      <% if post_comment.children %>
        <%= render partial: 'posts/comments/post_comment', collection: post_comment.children, as: :post_comment %>
      <% end %>
      <a class="text-decoration-none"
         href="<%= "#collapse-#{post_comment.id}" %>"
         data-bs-toggle="collapse"
         role="button"
         aria-expanded="false">
        Reply
      </a>
      <div class="collapse" id="<%= "collapse-#{post_comment.id}" %>">
        <div class="mb-2 m-4">
          <%= render 'posts/comments/form',
                     comment: @current_comment,
                     url: post_comments_path(@post, @current_comment),
                     parent_id: post_comment.id
          %>
        </div>
      </div>
    </div>
  </div>
</div>
