<div class="row justify-content-center">
  <article class="col-12">
    <h1 class="mb-4">
      <%= @post.title %>
    </h1>
    <p>
      <%= @post.body %>
    </p>
    <div class="d-flex justify-content-between">
      <div class="post-section">
        <span>
          <%= @post.creator.email %>
        </span>
        <span>
          <%= time_ago_in_words(@post.created_at) %>
        </span>
      </div>
    </div>
  </article>
</div>
