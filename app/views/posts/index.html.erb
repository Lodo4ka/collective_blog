<h1>Posts</h1>

<div>
  <%= link_to 'Create new post', new_post_path, class: 'btn btn-primary mb-2' %>
</div>

<div class="row">
  <% @posts.each do |post| %>
      <div class="card card-body mb-3">
        <h2 class="card-title">
          <%= link_to post.title, post_path(post) %>
        </h2>
        <div class="card-text mb-2">
          <%= truncate(post.body, length: 200) %>
        </div>
        <div class="text-right small text-muted mt-auto">
          <div class="me-2">
            <%= post.post_category.name %>
          </div>
          <div>
            <%= post.creator.email %>
          </div>
        </div>
      </div>
  <% end %>
</div>
